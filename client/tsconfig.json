{
    "compilerOptions": {
        "jsx":"react",
        "module":"commonjs",
        "noImplicitAny": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES5",
        "allowJs": true
    },
    "include": [
        "./src/**/**/*",
        "./*",
        "./src/Components/**/*"
    ]
}